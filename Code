import csv

# Function 1: Reading the Raw Data
file = open('usa_mercedes_benz_prices.csv', 'r')
reader = csv.reader(file)
for row in reader:
    print(row)
file.close()

# Reads Inputted Data and Return Rows Without Header
def load_data(filename):
    with open(filename, newline='') as csvfile:
        reader = csv.reader(csvfile)
        header = next(reader)
        return list(reader)

def clean_price(price_str):
    return float(price_str.replace('$', '').replace(',', ''))

def clean_rating(rating_str):
    return float(rating_str)


# Load data and run
data = load_data("usa_mercedes_benz_prices.csv")